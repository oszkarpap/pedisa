<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/createGlBTN"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:text="@string/crmed01"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/createNameGlET"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:hint="Protokoll epizód neve"
                android:inputType="textMultiLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/CreateGlbold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="félkövér" />

                <CheckBox
                    android:id="@+id/CreateGlitalic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dőlt"
                    android:textStyle="" />

                <CheckBox
                    android:id="@+id/CreateGlunderline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="aláhúzott" />

                <CheckBox
                    android:id="@+id/CreateGlColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="szín beállítása" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayoutColorPickerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.skydoves.colorpickerpreference.ColorPickerView
                    android:id="@+id/CreateGlcolorPickerView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    app:palette="@drawable/color_column"
                    app:selector="@drawable/wheel" />
            </LinearLayout>

            <EditText
                android:id="@+id/createDescGlET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:hint="Protokoll epizód kifejtése"
                android:imeOptions="actionDone"
                android:inputType="textMultiLine" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/CreateGlbold2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="félkövér" />

            <CheckBox
                android:id="@+id/CreateGlitalic2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dőlt"
                android:textStyle="" />

            <CheckBox
                android:id="@+id/CreateGlunderline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aláhúzott" />

            <CheckBox
                android:id="@+id/CreateGlColor2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="szín beállítása" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutColorPickerView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.skydoves.colorpickerpreference.ColorPickerView
                android:id="@+id/CreateGlcolorPickerView2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                app:palette="@drawable/color_column"
                app:selector="@drawable/wheel" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/createGlChooseImage"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:text="Kép kiválasztása"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/createGlUploadImage"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:text="Kép feltöltése"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/createGlimage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>