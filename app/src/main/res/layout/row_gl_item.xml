<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_guideLineListItemLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_glli_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_7sdp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_glli_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/txt_glli_attr"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="@color/colorPrimaryDark"

            android:textSize="@dimen/_1sdp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txt_glli_parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_7sdp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txt_glli_secKey"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_7sdp"
            android:visibility="invisible" />
    </LinearLayout>

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/row_glli_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="@dimen/_4sdp"
        android:padding="@dimen/_6sdp" />


</LinearLayout>