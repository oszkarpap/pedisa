<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_guideLineListItemLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/_20sdp"
    android:layout_marginLeft="@dimen/_20sdp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_glli_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_7sdp" />
    <TextView
        android:id="@+id/txt_glli_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_10sdp" />

    <TextView
        android:id="@+id/txt_glli_attr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_1sdp" />

    <TextView
        android:id="@+id/txt_glli_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_7sdp" />

    <TextView
        android:id="@+id/txt_glli_secKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_7sdp" />


</LinearLayout>